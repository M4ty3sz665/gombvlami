<Window x:Class="gombvlami.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:gombvlami"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition />
            </Grid.RowDefinitions>
            <Menu Grid.Row="0">
                <MenuItem Header="Reset" Command="{Binding MenuCommand}" CommandParameter="RESET" />
                <MenuItem Header="Save" Command="{Binding MenuCommand}" CommandParameter="SAVE" />
                <MenuItem Header="Load" Command="{Binding MenuCommand}" CommandParameter="Load" />
                <MenuItem Header="Exit" Command="{Binding MenuCommand}" CommandParameter="EXIT" />
            </Menu>
            <Button
                Grid.Row="1"
                Content="{Binding ButtonText}" Background="{Binding ButtonColor}" Foreground="Wheat"
                >
                
            </Button>
        </Grid>
        <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Label
                Content="Red:"
                Grid.Column="0"
                Grid.Row="0"
                VerticalAlignment="Center"
                >
                
            </Label>
            <TextBox
                Text="{Binding Red}" Grid.Column="1" Grid.Row="0" VerticalAlignment="Center" MaxLength="3"
                >
                
            </TextBox>

            <Slider
                Value="{Binding Red}" Grid.Column="2" Grid.Row="0" VerticalAlignment="Center" Minimum="0" Maximum="255" Margin="10"
                >
                
            </Slider>


            <Label
    Content="Green:"
    Grid.Column="0"
    Grid.Row="1"
    VerticalAlignment="Center"
    >

            </Label>
            <TextBox
    Text="{Binding Green}" Grid.Column="1" Grid.Row="1" VerticalAlignment="Center" MaxLength="3"
    >

            </TextBox>

            <Slider
    Value="{Binding Green}" Grid.Column="2" Grid.Row="1" VerticalAlignment="Center" Minimum="0" Maximum="255" Margin="10"
    >

            </Slider>

            <Label
    Content="Blue:"
    Grid.Column="0"
    Grid.Row="2"
    VerticalAlignment="Center"
    >

            </Label>
            <TextBox
    Text="{Binding Blue}" Grid.Column="1" Grid.Row="2" VerticalAlignment="Center" MaxLength="3"
    >

            </TextBox>

            <Slider
    Value="{Binding Blue}" Grid.Column="2" Grid.Row="2" VerticalAlignment="Center" Minimum="0" Maximum="255" Margin="10"
    >

            </Slider>
        </Grid>
    </Grid>
</Window>
